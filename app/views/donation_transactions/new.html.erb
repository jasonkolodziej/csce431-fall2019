<h1>Donate to Brazos Valley Jazz Society</h1>
<%= button_to "Home", user_path(current_user.id), :method=>:get%>
<%= button_to 'Manage Subscription', { controller: 'donation_transactions', action: 'edit', user_id: session[:user_id] } , method: :get %>
<%= button_to "Logout", session_path(current_user.id), :method=>:delete %>
                    
<%= form_for(:donation, url: { controller: 'donation_transactions', action: 'checkout' }) do |f| %>
    <table>
        <tr>
            <td>Donation Amount: $</td><td><%= f.number_field :donation_amount, :value => 1, :min => 1.00, :step => 0.01%></td>
        </tr>
    </table>
    <br />
    <%= f.submit "Donate" %>
<% end %>
