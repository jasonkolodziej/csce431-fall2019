<div class = "jumbotron">    
    <h1>Donate to Brazos Valley Jazz Society</h1>
</div>

<%= form_for(:make_donation, url: { controller: 'donation_transactions', action: 'checkout' }) do |f| %>
    <table class = "table form-table", style="width:80%;">
        <tr>
            <%# This area for user to fill out, given they chose custom recurring Payment %>
            <td>Frequency: </td><td><%=f.select :payment_freq, options_for_select(pay_custom_frequency)%></td>
            <td>Donation Amount: $</td><td><%= f.number_field :donation_amount, :value => 1, :min => 1.00, :step => 0.01%></td>
        </tr>
    </table>
    <br />
    <div class="object-center">
        <%= f.submit "Donate", class:"btn btn-primary" %>
    </div>
<% end %>
