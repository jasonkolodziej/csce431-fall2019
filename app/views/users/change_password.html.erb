<h1>Change Password</h1>

<%= form_for @user, url: { controller: 'users', action: 'update_password', id: @user.id } do |f| %>
    <table>
        <tr>
            <td>Current password:</td><td><%= f.password_field :old_password %></td>
        </tr>
        <tr>
            <td>New password:</td><td><%= f.password_field :password %></td>
        </tr>
        <tr>
            <td>Confirm password:</td><td><%= f.password_field :password_confirmation %></td>
        </tr>
    </table>
    <br />
    <%= f.submit "Confirm" %>
<% end %>
