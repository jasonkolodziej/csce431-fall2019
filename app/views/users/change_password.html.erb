<head>
    <%= stylesheet_link_tag 'application' %>
</head>
<body>
<div class="container-login100-donate show">
<div class="wrap-login100 show p-b-100">

<h1 class="text-white text-center text-middle p-b-20">Change Password</h1>

<%= form_for @user, url: { controller: 'users', action: 'update_password', id: @user.id } do |f| %>
    <div class="form-group">
        <label class="txt3 lower" for="user_old_password">Current Password</label>
        <%= f.password_field :old_password, class: "form-control" %>
    </div>
    <div class="form-group">
        <label class="txt3 lower" for="user_password">Password</label>
        <%= f.password_field :password, class: "form-control" %>
        <label class="txt3 lower" for="user_password_confirmation">Confirm Password</label>
        <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
    <br />
    <div class="center">
        <%= f.submit "Confirm", class: "btn btn-primary" %>
    </div>
<% end %>

</div>
</div>
</body>