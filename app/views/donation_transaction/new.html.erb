<h1>Donate to Brazos Valley Jazz Society</h1>
<%= button_to "Made Donations", user_path(current_user.id), :method=>:get%>
<%= button_to "Logout", session_path(current_user.id), :method=>:delete %>

                     
<%= form_for(:donation, url: { controller: 'donation_transaction', action: 'checkout' }) do |f| %>
    <table>
        <tr>
            <td>Donation Amount: $</td><td><%= f.number_field :donation_amount, :value => 1, :min => 1.00, :step => 0.01%></td>
        </tr>
    </table>
    <br />
    <%= f.submit "Donate" %>
<% end %>
