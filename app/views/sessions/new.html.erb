<head>
<%= stylesheet_link_tag 'application' %>
</head>
<body>
    <div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100 p-b-160 p-t-50">
                <%= form_for(:user, url: { controller: 'sessions', action: 'create' }, html: {class: 'login100-form validate-form'}) do |f| %>
                    <span class="login100-form-title p-b-1">BVJS Donor</span>
                    <span class='login100-form-2nd-title p-b-38'>Portal</span>
                    <div class="wrap-input100 rs1 validate-input" data-validate = "Username is required">
                        <%= f.text_field :email, class:'input100 has-val'%>
                        <span class="label-input100">Email address</span>
                    </div>
                    <div class="wrap-input100 rs2 validate-input" data-validate="Password is required">
                        <%= f.password_field :password, class: 'input100 has-val' %>
                        <span class="label-input100"> Password </span>
                    </div>
                    <div class="container-login100-form-btn">
                        <%= f.submit "Log In", class: 'login100-form-btn' %>
                    </div>
                    <div class="text-center w-full p-t-10">
                    <div class="custom-control-lg custom-control custom-checkbox">
                        <%=f.check_box :rememberme, class: "custom-control-input"%>
                        <label class="custom-control-label txt2" for="user_rememberme">Remember Me?</label>
                    </div>
                    </div>
                    <div class= "text-center w-full p-t-27">
                        <%= link_to 'Forgot password?', new_password_reset_path, class: 'txt3 white' %>
                    </div>
                    <div class="text-center w-full p-t-27">
                        <%= link_to "Register", new_user_path, class: 'txt3 white' %>
                    </div>
                <% end %>
            
			</div>
		</div>
	</div>
</body>
</body>
