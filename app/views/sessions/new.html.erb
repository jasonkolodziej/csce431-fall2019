<head>
<%= stylesheet_link_tag 'application' %>
</head>
<body>
    <% flash.each do |key, value| %>
        <div class="flash <%= key %>"><%= value %></div>
        <br />
    <% end %>
    <div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100 p-b-160 p-t-50">
            <%# <form class='login100-form validate-form', name="1">%> 
                <%= form_for(:user, url: { controller: 'sessions', action: 'create' }, html: {class: 'login100-form validate-form'}) do |f| %>
                    <span class="login100-form-title p-b-43">Account Login</span>
                    <div class="wrap-input100 rs1 validate-input" data-validate = "Username is required">
                        <%= f.text_field :email, class:'input100' %>
                        <span class="label-input100">Email address</span>
                    </div>
                    <div class="wrap-input100 rs2 validate-input" data-validate="Password is required">
                        <%= f.password_field :password, class: 'input100' %>
                        <span class="label-input100"> Password </span>
                    </div>
                    <div class="container-login100-form-btn">
                        <%= f.submit "Log In", class: 'login100-form-btn' %>
                    </div>
                    <div class="text-center w-full p-t-10">
                        <span class="txt1">Remember me?</span>
                        <%=f.check_box :rememberme %>
                    </div>
                    <div class= "text-center w-full p-t-27">
                        <%= link_to 'Forgot password?', new_password_reset_path, class: 'txt1' %>
                    </div>
                    <div class="text-center w-full p-t-27">
                        <%= link_to "Register", new_user_path, class: 'txt1' %>
                    </div>
                <% end %>
            
			</div>
		</div>
	</div>
</body>
</body>
