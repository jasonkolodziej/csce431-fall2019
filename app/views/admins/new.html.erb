<h1>Create New User</h1>

<%= form_for(:user, url: { controller: 'admins', action: 'create' }) do |f| %>
    <table>
        <tr>
            <td>Email address:</td><td><%= f.text_field :email %></td>
        </tr>
        <tr>
            <td>Password:</td><td><%= f.password_field :password %></td>
        </tr>
        <tr>
            <td>Confirm Password:</td><td><%= f.password_field :password_confirmation %></td>
        </tr>
    </table>
    <br />
    <%= f.submit "Save" %>
<% end %>

<% if @admin.errors.any? %>
    <% for message_error in @admin.errors.full_messages %>
        <li>* <%= message_error %></li>
    <% end %>
<% end %>