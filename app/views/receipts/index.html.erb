<h1>Donations Receipt</h1>

<table>
    <tr>
        <th>Date</th>
        <th>Amount</th>
    </tr>
    <% @donations.each do |d| %>
        <tr>
            <td><%= d.created_at.to_formatted_s(:long) %></td>
            <td><%= d.price %></td>
        </tr>
    <% end %>
</table>

<b>TOTAL: <%= "$#{'%.2f' % total}" %></b>